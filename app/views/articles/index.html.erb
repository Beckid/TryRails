<h1>All articles</h1>


<table>
	<thead>
		<th>Title</th>
		<th>Content</th>
		<th colspan="3"></th>
	</thead>

	<% @articles.each do |i| %>
		<tr>
			<td><%= i.title %></td>
			<td><%= i.content %></td>
			<td><%= link_to 'Show', article_path(i) %></td>
			<td><%= link_to 'Edit', edit_article_path(i) %></td>
			<%# Notice that you CANNOT use delete_article_path(i) here. See 'rails routes' to know why. %>
			<%# For Windows user, change coffeescript version to 1.8.0 in the GemFile according to the instruction in it.) %>
			<td><%= link_to 'Destroy', article_path(i), method: :delete, data: {confirm: 'Are you sure to delete ' + i.title + '?' } %></td>
		</tr>
	<% end %>
</table>

<p><%= link_to 'Create New Article', new_article_path %></p>